pipeline {
    agent any
    environment {
        REMOTE_USER = 'ubuntu'
        REMOTE_SERVER_IP = credentials("deployServerIP")
        REMOTE_SERVER_PW = credentials("deployServerPassword")
        PROJECT_DIR = 'home/ubuntu'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        
        stage('Deploy') {
            steps {
                sshagent(credentials: ['remote-server']) {
                    sh "rsync -avz ./dist/ ${REMOTE_USER}@${REMOTE_SERVER_IP}:/var/www/core"
                }
            }
        }
    }

    post { 
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed'
        }
    }
}
